<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Tasks queue</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/kognise/water.css@latest/dist/dark.min.css">
</head>
<body>
    <h1 align="center">Task list</h1>

    <form action="#" id="new-task-form">
        <fieldset>
            <legend>New task</legend>
            <label for="new-task-name">Name: </label>
            <input type="text" id="new-task-name" name="new-task-name"> 
            <label for="new-task-description">Description: </label>
            <textarea id="new-task-description" name="new-task-description"></textarea>
            <button class="add-task-button">Add task</button>
        </fieldset>
    </form>

    {{^tasks}}
    <blockquote>This is no tasks yet.</blockquote>
    {{/tasks}}

    {{#tasks}}
    <form action="#" class="task-form">
        <fieldset>
            <input type="text" value="{{name}}">

            <div class="time-created">
                Created: {{created.time}} {{created.date}}
            </div>

            {{#expires}}
            <input type="time" value="{{expires.time}}">
            <input type="date" value="{{expires.date}}">
            {{/expires}}

            <textarea>{{description}}</textarea>
            <button class="edit-task-button">Update</button>
            <button class="delete-task-button">Delete</button>
        </fieldset>
    </form>
    {{/tasks}}

    <script src="js/tasks.js"></script>
</body>
</html>